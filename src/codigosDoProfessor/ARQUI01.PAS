PROGRAM T06ANA_KAROLINA;
USES BIBLIONT;
//FUP QUE LEIA TODOS OS REGISTROS DE "RESULTMEGASENA.TXT" E ANTES DE TERMINAR
//INFORME O TOTAL DE VEZES QUE CADA NUMERO FOI SORTEADO
VAR
   ARQ:TEXT;//NOME LÓGICO COM AS CARACTERISTICAS DO ARQUIVO
	 REG:STRING[33]; //COnTERA O REGISTRO LIDO
	 CONTA:ARRAY[1..60] OF INTEGER; //CONTERA A CONTAGEM DO NUMERO DE VEZES QUE CADA NUM SAIU
	 NUM:ARRAY[1..6] OF INTEGER;  //CONTERA OS 6 NUMEROS SORTEADOS POR CONCURSO
	 UNI:STRING[3]; //CONTERA UM NUMERO SORTEADO COMO STRING[3] (3 caracteres)
	 A,B,C:INTEGER;
BEGIN
 ASSIGN(ARQ,'RESULTMEGASENA.TXT');  //LIGA NOME LOGICO AO FISICO
 RESET(ARQ);	                      //ABRE O ARQUIVO PARA LEITURA
 WHILE NOT EOF(ARQ) DO
  BEGIN
	 READLN(ARQ,REG);  //tipo texto acesso seq=	READLN <<<---SEMPRE
	                   //2544 30/11/2022 25 38 45 53 55 56
	 WRITE(COPY(REG,1,4),'---',COPY(REG,6,10)); //RETIRA NUM. CONCURSO E DATA
	 C:=16;
	 FOR A:=1 TO 6 DO
	  BEGIN
	   UNI:=COPY(REG,C,3); //RETIRA DE REG OS NUMEROS INDIVIDUALMENTE
	   VAL(UNI,NUM[A],B);  //TRASNF OS NUMEROS EM INTEGER E JOGA NO VETOR
	   WRITE(NUM[A]:3);
	   C:=C+3;
	  END;            //NUM[1]=25, [2]=38, [3]=45, [4]=53, [5]=55, [6]=56
	  WRITELN;
	END;
 TERMINE;
 CLOSE(ARQ);
END.                                        